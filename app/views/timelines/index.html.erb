<%- model_class = Timeline -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:focus_date) %></th>
      <th><%= model_class.human_attribute_name(:initial_zoom) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @timelines.each do |timeline| %>
      <tr>
        <td><%= link_to timeline.id, timeline_path(timeline) %></td>
        <td><%= timeline.title %></td>
        <td><%= timeline.focus_date %></td>
        <td><%= timeline.initial_zoom %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      timeline_path(timeline), :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_timeline_path(timeline), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      timeline_path(timeline),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_timeline_path,
            :class => 'btn btn-primary' %>



