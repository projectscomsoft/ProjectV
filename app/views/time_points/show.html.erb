<%- model_class = TimePoint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @time_point.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @time_point.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @time_point.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:high_threshold) %>:</strong></dt>
  <dd><%= @time_point.high_threshold %></dd>
  <dt><strong><%= model_class.human_attribute_name(:importance) %>:</strong></dt>
  <dd><%= @time_point.importance %></dd>
  <dt><strong><%= model_class.human_attribute_name(:timeline_id) %>:</strong></dt>
  <dd><%= @time_point.timeline_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              time_points_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_time_point_path(@time_point), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              time_point_path(@time_point),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
